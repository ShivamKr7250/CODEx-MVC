@using CODEx.Model
@model Coordinator

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row text-center">
            <h2 class="text-primary py-2">Delete Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" disabled class="form-control" />
                </div>
                <div class="mb-3 row">
                    <label asp-for="Designation" class="p-1"></label>
                    <input asp-for="Designation" disabled class="form-control" />
                </div>
                <div class="mb-3 row">
                    <label asp-for="Description" class="p-1"></label>
                    <input asp-for="Description" disabled class="form-control" />
                </div>
                <div class="mb-3 row">
                    <label asp-for="Batch" class="p-1"></label>
                    <input asp-for="Batch" disabled class="form-control" />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Coordinator" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9"
            </div>
        </form>
    </div>
</div>



